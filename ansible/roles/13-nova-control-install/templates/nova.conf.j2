[DEFAULT]
enabled_apis = osapi_compute,metadata
transport_url = rabbit://{{ rabbitmq_user }}:{{ rabbitmq_pass }}@{{ hostvars[groups['control'][0]].ansible_host }}
my_ip = {{ hostvars[groups['control'][0]].ansible_host }}
use_neutron = true
firewall_driver = nova.virt.firewall.NoopFirewallDriver


[api]
auth_strategy = keystone


[api_database]
connection = mysql+pymysql://{{ nova_db_user }}:{{ nova_db_pass }}@{{ hostvars[groups['control'][0]].ansible_host }}/nova_api


[database]
connection = mysql+pymysql://{{ nova_db_user }}:{{ nova_db_pass }}@{{ hostvars[groups['control'][0]].ansible_host }}/nova


[glance]
api_servers = http://{{ hostvars[groups['control'][0]].ansible_host }}:9292


[keystone_authtoken]
auth_url = http://{{ hostvars[groups['control'][0]].ansible_host }}:5000/v3
memcached_servers = {{ hostvars[groups['control'][0]].ansible_host }}:11211
auth_type = password
project_domain_name = Default
user_domain_name = Default
project_name = service
username = nova
password = {{ nova_os_pass }}


[oslo_concurrency]
lock_path = /var/lib/nova/tmp


[placement]
region_name = RegionOne
project_domain_name = Default
project_name = service
auth_type = password
user_domain_name = Default
auth_url = http://{{ hostvars[groups['control'][0]].ansible_host }}:5000/v3
username = placement
password = {{ placement_os_pass }}


[placement_database]
connection = mysql+pymysql://{{ placement_db_user }}:{{ placement_db_pass }}@{{ hostvars[groups['control'][0]].ansible_host }}/placement

[vnc]
enabled = true
server_listen = {{ hostvars[groups['control'][0]].ansible_host }}
server_proxyclient_address = {{ hostvars[groups['control'][0]].ansible_host }}
